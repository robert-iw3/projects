# /etc/apparmor.d/usr.bin.openssl
#include <tunables/global>

profile openssl /usr/bin/openssl {
  #include <abstractions/base>

  network inet,
  network inet6,

  /usr/lib/** r,
  /etc/** r,

  # OpenSSL is often used for C2 encryption/tunneling
  deny /usr/bin/sh x,
  deny /usr/bin/bash x,
  deny /usr/bin/python* x,
  deny /usr/bin/curl x,
  deny /usr/bin/wget x,
  deny /usr/bin/socat x,

  owner @{HOME}/** rw,
  owner /tmp/** rw,

  audit deny /** w,
}