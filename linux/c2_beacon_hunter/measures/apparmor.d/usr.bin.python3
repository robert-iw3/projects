# /etc/apparmor.d/usr.bin.python3
#include <tunables/global>

profile python3 /usr/bin/python3* {
  #include <abstractions/base>
  #include <abstractions/python>

  network inet,
  network inet6,

  /usr/lib/** r,
  /usr/share/** r,

  # Deny dangerous tools
  deny /usr/bin/sh x,
  deny /usr/bin/bash x,
  deny /usr/bin/curl x,
  deny /usr/bin/wget x,
  deny /usr/bin/nc x,
  deny /usr/bin/socat x,
  deny /usr/bin/openssl x,

  owner @{HOME}/** rw,
  owner /tmp/** rw,

  audit deny /** w,
}