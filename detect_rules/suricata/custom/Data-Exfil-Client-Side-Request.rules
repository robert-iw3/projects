alert http $HOME_NET any -> $EXTERNAL_NET any (
    msg:"Potential Data Exfiltration via Client-Side Request";
    flow:established,to_server;
    http.referer; content:"your_company_domain.com|your_other_app.io"; nocase; pcre:"/https?:\/\/([^\.:\/]*\.)?(your_company_domain\.com|your_other_app\.io)/i";
    http.host; content:"!your_company_domain.com|!your_other_app.io"; nocase; pcre:"/^(?!.*(your_company_domain\.com|your_other_app\.io)).*$/i";
    content:"oastify.com|burpcollaborator.net|interact.sh|requestbin.net"; nocase; pcre:"/(\.oastify\.com|\.burpcollaborator\.net|\.interact\.sh|\.requestbin\.net)/i"; distance:0;
    http.uri; pcre:"/[\?&](data|payload|html|content|b64)=([A-Za-z0-9+\/_\-]{100,})/i"; distance:0;
    http.uri; urilen:>1024; distance:0;
    classtype:policy-violation;
    sid:8181002;
    rev:1;
    metadata:author RW, created_at 2025_08_03, tags attack.exfiltration attack.t1048 attack.t1567, status experimental;
)